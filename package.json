{
  "name": "@autoenroll/root",
  "version": "0.1.0",
  "private": true,
  "description": "AutoEnroll.ie - Engine-agnostic orchestration for Ireland Auto-Enrolment (NAERSA)",
  "scripts": {
    "build": "pnpm --filter \"./packages/**\" --filter \"./apps/**\" build",
    "test": "pnpm --filter \"./packages/**\" --filter \"./apps/**\" test",
    "lint": "pnpm --filter \"./packages/**\" --filter \"./apps/**\" lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "pnpm --filter \"./packages/**\" --filter \"./apps/**\" typecheck",
    "clean": "pnpm --filter \"./packages/**\" --filter \"./apps/**\" clean",
    "dev": "pnpm --filter \"./packages/**\" build && pnpm --parallel --filter \"./apps/**\" dev"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
